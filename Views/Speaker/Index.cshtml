@model IEnumerable< SpeakerManagement.ViewModels.Speaker.AssignTaskViewModel>

<div class="row">
    <div class="col-12">
        <div class="page-title-box">
            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="javascript: void(0);">Home</a></li>
                    <li class="breadcrumb-item active">My Tasks</li>
                </ol>
            </div>
            <h4 class="page-title">Tasks</h4>
        </div>
    </div>
</div>

<div class="row">
    @foreach (var item in Model)
    {
        <form enctype="multipart/form-data">
            <input type="hidden" name="SpeakerTaskId" value="@item.SpeakerTaskId" />
            <input type="hidden" name="InputType" value="@item.InputType" />

            <div class="col-xxl-8 col-xl-7">
                <div class="card d-block">
                    <div class="card-body">
                        <div class="form-check float-start">
                            <input type="checkbox" name="IsCompleted" class="form-check-input markAsComplete" id="chk_@item.SpeakerTaskId" checked="@item.IsCompleted" readonly="readonly">
                            <label class="form-check-label" for="chk_@item.SpeakerTaskId">
                                Mark as completed
                            </label>
                        </div>

                        <div class="clearfix"></div>

                        <h4 class="mt-3">Task: @item.TaskName</h4>

                        <div class="row">
                            <div class="col-8">
                                <p class="mt-2 mb-1 text-muted fw-bold font-12 text-uppercase">Instructions</p>
                                <div class="d-flex">
                                    <div>
                                        <h5 class="mt-1 font-14">
                                            @item.Instruction
                                        </h5>
                                    </div>
                                </div>
                            </div>
                            <div class="col-4">
                                <p class="mt-2 mb-1 text-muted fw-bold font-12 text-uppercase">Deadline Date</p>
                                <div class="d-flex">
                                    <i class="uil uil-schedule font-18 text-success me-1"></i>
                                    <div>
                                        <h5 class="mt-1 font-14 deadlineDate">
                                            @item.Deadline.ToString("dd MMMM yyyy")
                                        </h5>
                                    </div>
                                </div>
                            </div>
                        </div>

                        @if (item.InputType == "File")
                        {
                            <div class="mt-3">
                                <input type="file" name="data" class="form-control" />
                            </div>
                        }
                        @if (item.InputType == "Url")
                        {
                            <div class="mt-3">
                                <input type="url" name="data" class="form-control" />
                            </div>
                        }
                        else if (item.InputType == "Textarea")
                        {
                            <div class="mt-3">
                                <textarea class="form-control" rows="5" name="data">@item.Data</textarea>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </form>
    }
</div>

@section scripts {
    <script src="~/js/pages/Speaker.js"></script>
}