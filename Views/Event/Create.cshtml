<div class="row">
    <div class="col-12">
        <div class="page-title-box">
            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="javascript: void(0);">Home</a></li>
                    <li class="breadcrumb-item"><a href="javascript: void(0);">Event</a></li>
                    <li class="breadcrumb-item active">Create Event</li>
                </ol>
            </div>
            <h4 class="page-title">Create Event</h4>
        </div>
    </div>
</div>

<form id="EventForm" class="form-horizontal">
    <div class="card">
        <div class="card-body">
            <div class="w-75 mx-auto">
                <div class="row mb-3">
                    <label for="EventName" class="col-3 col-form-label">Event Name</label>
                    <div class="col-9">
                        <input type="text" id="EventName" name="EventName" class="form-control">
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="EventLogo" class="col-3 col-form-label">Event Logo</label>
                    <div class="col-9">
                        <input type="file" id="EventLogo" name="EventLogo" class="form-control" accept=".png, .jpg, .jpeg">
                    </div>
                </div>
                <div class="row mb-5">
                    <label for="EventDate" class="col-3 col-form-label">Event Date</label>
                    <div class="col-9">
                        <input type="text" id="EventDate" name="EventDate" class="form-control" data-provide="datepicker" data-date-container="#datepicker1">
                    </div>
                </div>

                <div class="row mb-3 taskSection">
                    
                    <div class="col-5 d-flex align-items-center">
                        <label for="Task" class="form-label">Task</label>
                        <select class="form-select mb-3">
                            <option selected>Open this select menu</option>
                            <option value="1">One</option>
                            <option value="2">Two</option>
                            <option value="3">Three</option>
                        </select>
                    </div>
                    <div class="col-5 d-flex">
                        <label for="Deadline" class="form-label">Deadline</label>
                        <input type="text" id="Deadline" name="Deadline" class="form-control" data-provide="datepicker" data-date-container="#datepicker1">
                    </div>
                    <div class="col-2 d-flex">
                        <button class="btn btn-outline-danger">Delete</button>
                    </div>
                </div>

                <div>
                    <button type="button" id="addForm" class="btn btn-sm btn-secondary">Add</button>
                </div>



            </div>
        </div>
        <div class="card-footer">
            <div class="justify-content-end row">
                <div class="col-9">
                    <button type="submit" class="btn btn-success">Save</button>
                </div>
            </div>
        </div>
    </div>
</form>

@section scripts {
    <script src="~/js/pages/CreateEvent.js"></script>
}